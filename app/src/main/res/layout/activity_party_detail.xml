<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/backdrop"
                    android:src="@drawable/flag"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:fitsSystemWindows="true"/>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/party_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        tools:text="My Awesome Party"/>
                    <TextView
                        android:id="@+id/constituency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        tools:text="My Awesome Party"/>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#80000000"
                    android:padding="@dimen/spacing_major"
                    android:layout_alignParentBottom="true"
                    android:weightSum="3">
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <org.mmaug.mae.view.AutofitTextView
                            android:lines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                            android:text="ပါတီအမှတ်စဥ်"/>
                        <TextView
                            android:id="@+id/party_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                            tools:text="TEST"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <org.mmaug.mae.view.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                            android:text="ပါတီ၀င်ဦးရေ"/>
                        <TextView
                            android:id="@+id/party_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                            tools:text="TEST"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <org.mmaug.mae.view.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                            android:text="တည်ထောင်သည့်နေ့"/>
                        <TextView
                            android:id="@+id/party_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                            tools:text="TEST"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:elevation="@dimen/toolbar_elevation"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:minHeight="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="1000dp"
        android:layout_gravity="fill_vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:minHeight="@dimen/linearlayout_fix"
            >
            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_large"
                android:layout_marginRight="@dimen/default_padding_large"
                android:layout_marginTop="@dimen/default_padding_large"
                android:textStyle="bold"
                android:text="@string/party_leader"/>
            <android.support.v7.widget.CardView
                android:orientation="horizontal"
                android:padding="@dimen/spacing_major"
                android:background="@color/white"
                android:id="@+id/candidate_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_large"
                android:clickable="true"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                android:foreground="?selectableItemBackground"
                app:cardElevation="5dp"
                app:pressedTranslationZ="16dp"
                app:borderWidth="0dp"
                app:elevation="@dimen/fab_elevation"
                app:rippleColor="@color/primary_dark"
                tools:cardCornerRadius="@dimen/default_padding_small"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_minor"
                        android:weightSum="2">
                        <TextView
                            android:text="@string/leader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_minor"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/party_leader"
                            tools:text="WOWOW"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="@dimen/spacing_minor"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_large"
                android:layout_marginRight="@dimen/default_padding_large"
                android:layout_marginTop="@dimen/default_padding_large"
                android:text="@string/party_contact"/>
            <android.support.v7.widget.CardView
                android:orientation="horizontal"
                android:padding="@dimen/spacing_major"
                android:background="@color/white"
                android:id="@+id/candate_motion_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_large"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                app:cardElevation="5dp"
                app:pressedTranslationZ="16dp"
                app:borderWidth="0dp"
                app:elevation="@dimen/fab_elevation"
                app:rippleColor="@color/primary_dark"
                tools:cardCornerRadius="@dimen/default_padding_small"
                >
                <LinearLayout
                    android:id="@+id/motion_pie_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_minor"
                        android:weightSum="2">
                        <TextView
                            android:text="@string/head_quarter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_minor"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/party_headquarter"
                            tools:text="WOWOW"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="@dimen/spacing_minor"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_minor"
                        android:weightSum="2">
                        <TextView
                            android:text="@string/phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_minor"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/party_phone"
                            tools:text="WOWOW"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="@dimen/spacing_minor"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_large"
                android:layout_marginRight="@dimen/default_padding_large"
                android:layout_marginTop="@dimen/default_padding_large"
                android:text="@string/current_count_header"/>
            <android.support.v7.widget.CardView
                android:padding="@dimen/spacing_major"
                android:id="@+id/current_election_status_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_large"
                app:cardElevation="5dp"
                app:pressedTranslationZ="16dp"
                app:borderWidth="0dp"
                app:elevation="@dimen/fab_elevation"
                app:rippleColor="@color/primary_dark"
                tools:cardCornerRadius="@dimen/default_padding_small"
                android:minHeight="180dp"
                >
                <LinearLayout
                    android:id="@+id/current_election_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.design.widget.TabLayout
                        android:id="@+id/current_year_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <org.mmaug.mae.view.WrappingViewPager
                        android:id="@+id/current_year_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_large"
                android:layout_marginRight="@dimen/default_padding_large"
                android:layout_marginTop="@dimen/default_padding_large"
                android:text="@string/previous_count_header"/>
            <android.support.v7.widget.CardView
                android:padding="@dimen/spacing_major"
                android:id="@+id/prev_election_status_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_large"
                app:cardElevation="5dp"
                app:pressedTranslationZ="16dp"
                app:borderWidth="0dp"
                app:elevation="@dimen/fab_elevation"
                app:rippleColor="@color/primary_dark"
                tools:cardCornerRadius="@dimen/default_padding_small"
                android:minHeight="180dp"
                >
                <LinearLayout
                    android:id="@+id/prev_election_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.design.widget.TabLayout
                        android:id="@+id/prev_year_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <org.mmaug.mae.view.WrappingViewPager
                        android:id="@+id/prev_year_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:orientation="horizontal"
                android:padding="@dimen/spacing_major"
                android:background="@color/white"
                android:id="@+id/compare_candidate_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_massive"
                android:layout_marginRight="@dimen/spacing_massive"
                android:layout_marginBottom="@dimen/spacing_massive"
                android:layout_marginTop="@dimen/spacing_minor"
                app:layout_anchorGravity="bottom|right|end"
                android:foreground="?selectableItemBackground"
                app:cardElevation="5dp"
                app:pressedTranslationZ="16dp"
                app:borderWidth="0dp"
                app:elevation="@dimen/fab_elevation"
                app:rippleColor="@color/primary_dark"
                app:cardBackgroundColor="@color/accent_color"
                tools:cardCornerRadius="@dimen/default_padding_small"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                >
                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="@dimen/spacing_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="တစ်ခြားအမတ်လောင်းနှင့် နှိုင်းယှဥ်ကြည့်မည်"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>
            <View android:layout_width="1dp" android:layout_height="56dp"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>