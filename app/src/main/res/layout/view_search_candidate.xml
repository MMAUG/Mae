<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_micro"
    app:cardElevation="@dimen/spacing_major"
    android:layout_margin="@dimen/spacing_major"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_nano"
        >
      <AutoCompleteTextView
          android:singleLine="true"
          android:id="@+id/et_candidate_search"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Enter Candidate Name"
          android:drawableLeft="@drawable/ic_search_candidate"
          android:background="@null"
          android:padding="@dimen/spacing_minor"
          android:height="?android:attr/actionBarSize"
          />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:background="@color/cardview_light_background"
        android:id="@+id/rv_search_candidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
</android.support.v7.widget.CardView>