<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/appbarlayout_height"
      android:fitsSystemWindows="true"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <org.mmaug.mae.view.ZoomAspectRatioImageView
            android:id="@+id/backdrop"
            android:src="@drawable/flag"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            app:layout_collapseMode="parallax"
            android:fitsSystemWindows="true"
            />

      </RelativeLayout>
      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?android:attr/actionBarSize"
          app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          app:elevation="@dimen/toolbar_elevation"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          android:minHeight="?android:attr/actionBarSize"
          app:layout_collapseMode="pin"
          />

      <org.mmaug.mae.view.CollapsingAvatarToolbar
          android:id="@+id/stuff_container"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          >

        <ImageView
            android:id="@+id/candidate_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_placeholder"
            android:layout_gravity="center_vertical|center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            >

          <TextView
              android:id="@+id/candidate_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/white"
              style="@style/ActionBarTitleText"
              />

        </LinearLayout>
      </org.mmaug.mae.view.CollapsingAvatarToolbar>

    </android.support.design.widget.CollapsingToolbarLayout>
  </android.support.design.widget.AppBarLayout>
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minHeight="1000dp"
      android:layout_gravity="fill_vertical"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="@dimen/linearlayout_fix"
        android:layout_marginTop="23dp"
        >
      <TextView
          style="@style/TextAppearance.AppCompat.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/default_padding_large"
          android:layout_marginRight="@dimen/default_padding_large"
          android:layout_marginTop="@dimen/default_padding_large"
          android:textStyle="bold"
          android:text="@string/candidate_bio"
          />
      <android.support.v7.widget.CardView
          android:orientation="horizontal"
          android:padding="@dimen/spacing_major"
          android:background="@color/white"
          android:id="@+id/candidate_detail_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/default_padding_large"
          android:clickable="true"
          app:layout_anchor="@id/appbar"
          app:layout_anchorGravity="bottom|right|end"
          android:foreground="?selectableItemBackground"
          app:cardElevation="5dp"
          app:pressedTranslationZ="16dp"
          app:borderWidth="0dp"
          app:elevation="@dimen/fab_elevation"
          app:rippleColor="@color/primary_dark"
          card_view:cardCornerRadius="@dimen/default_padding_small"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
          <LinearLayout
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="5"
              >
            <TextView
                android:id="@+id/candidate_detail_education"
                card_view:text="ကော့မှူး"
                android:gravity="center"
                android:src="@drawable/flag"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_micro"
                android:background="#AECACE"
                />
            <TextView
                android:id="@+id/candidate_detail_occupation"
                android:gravity="center"
                card_view:text="ဥက္ကဌ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_micro"
                android:background="#AECACE"
                />
            <TextView
                android:id="@+id/candidate_detail_race"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                />
          </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginRight="@dimen/spacing_minor"
              android:layout_marginLeft="@dimen/spacing_minor"
              android:background="#AECACE"
              />

          <LinearLayout
              android:id="@+id/upper_house_view"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:id="@+id/upper_house_label"
                android:text="@string/upper_house_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_minor"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/upper_house"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:text="@string/party"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_minor"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/candidate_detail_party"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:text="@string/date_of_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_minor"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/candidate_detail_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:text="@string/religion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_minor"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/candidate_detail_religion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:text="@string/father_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
            <TextView
                android:id="@+id/candidate_detail_father"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:text="@string/mother_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
            <TextView
                android:id="@+id/candidate_detail_mother"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/spacing_minor"
              android:weightSum="2"
              >
            <TextView
                android:text="@string/candidate_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
            <TextView
                android:id="@+id/candidate_detail_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/spacing_minor"
                />
          </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
      <TextView
          android:id="@+id/motion_header_tv"
          style="@style/TextAppearance.AppCompat.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/default_padding_large"
          android:layout_marginRight="@dimen/default_padding_large"
          android:layout_marginTop="@dimen/default_padding_large"
          android:text="@string/motion_header"
          />
      <android.support.v7.widget.CardView
          android:orientation="horizontal"
          android:padding="@dimen/spacing_major"
          android:background="@color/white"
          android:id="@+id/candate_motion_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/default_padding_large"
          app:layout_anchor="@id/appbar"
          app:layout_anchorGravity="bottom|right|end"
          app:cardElevation="5dp"
          app:pressedTranslationZ="16dp"
          app:borderWidth="0dp"
          app:elevation="@dimen/fab_elevation"
          app:rippleColor="@color/primary_dark"
          card_view:cardCornerRadius="@dimen/default_padding_small"
          >
        <LinearLayout
            android:id="@+id/motion_pie_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
          <FrameLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
            <org.eazegraph.lib.charts.PieChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/motion_piechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/spacing_major"
                app:egHighlightStrength="0"
                app:egInnerPaddingOutline="0"
                app:egInnerPadding="85"
                app:egInnerPaddingColor="@color/cardview_light_background"
                app:egEmptyDataText="No Issues Found"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
              <TextView
                  android:id="@+id/motion_middle_text"
                  style="@style/TextAppearance.AppCompat.Subhead"
                  android:fontFamily="sans-serif-condensed"
                  android:layout_marginTop="@dimen/spacing_major"
                  android:layout_marginLeft="@dimen/spacing_major"
                  android:layout_marginRight="@dimen/spacing_major"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  />
              <TextView
                  android:id="@+id/motion_count"
                  style="@style/TextAppearance.AppCompat.Title"
                  android:fontFamily="sans-serif-condensed"
                  android:layout_margin="@dimen/spacing_major"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  />
            </LinearLayout>
          </FrameLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
      <TextView
          android:id="@+id/question_header_tv"
          style="@style/TextAppearance.AppCompat.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/default_padding_large"
          android:layout_marginRight="@dimen/default_padding_large"
          android:layout_marginTop="@dimen/default_padding_large"
          android:text="@string/question_header"
          />
      <android.support.v7.widget.CardView
          android:orientation="horizontal"
          android:padding="@dimen/spacing_major"
          android:background="@color/white"
          android:id="@+id/candate_question_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/default_padding_large"
          app:layout_anchor="@id/appbar"
          app:layout_anchorGravity="bottom|right|end"
          app:cardElevation="5dp"
          app:pressedTranslationZ="16dp"
          app:borderWidth="0dp"
          app:elevation="@dimen/fab_elevation"
          app:rippleColor="@color/primary_dark"
          card_view:cardCornerRadius="@dimen/default_padding_small"
          >
        <LinearLayout
            android:id="@+id/question_pie_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
          <FrameLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
            <org.eazegraph.lib.charts.PieChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/question_piechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/spacing_major"
                app:egHighlightStrength="0"
                app:egInnerPaddingOutline="0"
                app:egInnerPadding="85"
                app:egInnerPaddingColor="@color/cardview_light_background"
                app:egEmptyDataText="No Issues Found"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
              <TextView
                  android:id="@+id/question_middle_text"
                  style="@style/TextAppearance.AppCompat.Subhead"
                  android:fontFamily="sans-serif-condensed"
                  android:layout_marginTop="@dimen/spacing_major"
                  android:layout_marginLeft="@dimen/spacing_major"
                  android:layout_marginRight="@dimen/spacing_major"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  />
              <TextView
                  android:id="@+id/question_count"
                  style="@style/TextAppearance.AppCompat.Title"
                  android:fontFamily="sans-serif-condensed"
                  android:layout_margin="@dimen/spacing_major"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  />
            </LinearLayout>
          </FrameLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:orientation="horizontal"
          android:padding="@dimen/spacing_major"
          android:background="@color/white"
          android:id="@+id/compare_candidate_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_massive"
          android:layout_marginRight="@dimen/spacing_massive"
          android:layout_marginBottom="@dimen/spacing_massive"
          android:layout_marginTop="@dimen/spacing_minor"
          app:layout_anchorGravity="bottom|right|end"
          android:foreground="?selectableItemBackground"
          app:cardElevation="5dp"
          app:pressedTranslationZ="16dp"
          app:borderWidth="0dp"
          app:elevation="@dimen/fab_elevation"
          app:rippleColor="@color/primary_dark"
          app:cardBackgroundColor="@color/accent_color"
          card_view:cardCornerRadius="@dimen/default_padding_small"
          app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
          >
        <TextView
            android:id="@+id/mCandidateCompareResult"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:fontFamily="sans-serif-condensed"
            android:layout_margin="@dimen/spacing_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="တစ်ခြားအမတ်လောင်းနှင့် နှိုင်းယှဥ်ကြည့်မည်ii"
            android:gravity="center"
            />
      </android.support.v7.widget.CardView>
      <View
          android:layout_marginBottom="@dimen/spacing_major"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          />
    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>
  <android.support.v7.widget.CardView
      android:orientation="horizontal"
      android:padding="@dimen/spacing_major"
      android:background="@color/white"
      android:id="@+id/candidate_card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_padding_large"
      android:clickable="true"
      app:layout_anchor="@id/appbar"
      app:layout_anchorGravity="bottom|right|end"
      android:foreground="?selectableItemBackground"
      app:cardElevation="5dp"
      app:pressedTranslationZ="16dp"
      app:borderWidth="0dp"
      app:elevation="@dimen/fab_elevation"
      app:rippleColor="@color/primary_dark"
      card_view:cardCornerRadius="@dimen/default_padding_small"
      app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
      >
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/spacing_minor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:dividerPadding="@dimen/spacing_micro"
        android:gravity="center"
        >
      <org.mmaug.mae.view.AutofitTextView
          android:id="@+id/candidate_detail_constituency_pl"
          card_view:text="ကော့မှူး"
          android:gravity="center"
          android:src="@drawable/flag"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:lines="1"
          android:maxLines="1"
          android:layout_weight="2"
          />

      <org.mmaug.mae.view.AutofitTextView
          android:id="@+id/legislature"
          android:gravity="center"
          card_view:text="ပြည်သူ့လွျတ်တော်"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:lines="1"
          android:maxLines="1"
          android:layout_weight="2"
          />
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:padding="@dimen/spacing_micro"
          android:layout_weight="1"
          >

        <org.mmaug.mae.view.AspectRatioImageView
            android:id="@+id/candidate_detail_party_flag"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            card_view:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            />
      </FrameLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>